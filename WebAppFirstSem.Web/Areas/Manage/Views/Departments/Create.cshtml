@model WebAppFirstSem.Web.Areas.Manage.ViewModels.Departments.CreateViewModel
@{
    Layout = "~/areas/manage/views/shared/_managelayout.cshtml";
}

<h1>Create</h1>


<div class="container">
    <div class="row">
        <div class="col">
            <form method="post" action="/manage/departments/create">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()

                <div class="form-group">
                    <label class="control-label">Name</label>
                    <input type="text" class="form-control" name="Name" placeholder="Enter a name" />
                </div>


                <div class="form-group">
                    <label class="control-label">Budget</label>
                    <input type="text" class="form-control" name="Budget" placeholder="Enter a Budget" />
                </div>
            

              

                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="~/manage/departments/index" class="btn btn-danger">Cancel</a>


            </form>
        </div>
    </div>
</div>

