@model WebAppFirstSem.Web.Infrastructures.Domain.Models.Service
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>


<div>
    <h4>Services</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            ProductStatus
        </dt>
        <dd class="col-sm-10">
            @Model.ServiceStatus
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Price.ToString("F")
        </dd>
    </dl>
</div>
<div>
    <a href="~/manage/services/edit/@Model.Id" class="btn btn-primary" asp-route-id="@Model.Id">Edit</a> |
    <a href="~/manage/services/index" class="btn btn-danger">Back to List</a>
</div>